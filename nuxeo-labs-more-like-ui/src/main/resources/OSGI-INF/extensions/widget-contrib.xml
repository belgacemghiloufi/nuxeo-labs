<?xml version="1.0"?>
<component name="org.nuxeo.labs.more.like.ui">
    <extension
            target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
            point="widgettypes">
        <widgetType name="more_like_this">
            <configuration>
                <title>More Like This</title>
                <description>
                    <p>
                        Displays similar documents
                    </p>
                </description>
                <supportedModes>
                    <mode>view</mode>
                </supportedModes>
            </configuration>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">/incl/more_like_this.xhtml</property>
        </widgetType>
    </extension>
</component>
